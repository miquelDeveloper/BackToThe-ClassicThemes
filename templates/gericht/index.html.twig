{% extends 'base-web.html.twig' %}

{% block title %}Hello GerichtController!{% endblock %}

{% block body %}
    {% for message in app.flashes('erfolg') %}
        <div class="alert alert-success">
            <h3>{{message }}</h3>
        </div>

    {% endfor %}
    <br>
    <div class="container">
    <h2> Gericht bearbeiten</h2>
    <br>
    <table class="table table-striped">
    <thead>
        <tr>
            <td>Bestell Nr.</td>
            <td>Name</td>
            <td>Beschreibung</td>
            <td>Categorie</td>
            <td>Preis</td>
            <td>Loschen</td>
            <td><a href="{{ path ('gericht.anlegen')}}">Anlegen</a></td>
        </tr>
    </thead>
    <tbody>
        {% for gericht in gerichte %}
            <tr>
                <td>{{gericht.id}}</td>
                <td><a href="{{ path ('gericht.anzeigen',{id: gericht.id})}}">{{gericht.name}}</a></td>
                <td>{{gericht.beschreibung}}</td>
                <td>{{gericht.category}}</td>
                <td>{{gericht.preis}}</td>
                <td><a href="{{ path ('gericht.entfernen',{id: gericht.id})}}">X</a></td>
                <td></td>
        </tr>
        {% endfor %}
    </tbody>
    </table>
    </div>
{% endblock %}
